{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-constant-condition": "off",
		"quotes": ["error", "single", { "allowTemplateLiterals": true }],
		"no-unused-vars": ["warn", { "args": "none" }],
  }
}